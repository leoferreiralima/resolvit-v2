{
  "name": "resolvit",
  "version": "1.0.0",
  "description": "A project to learn program",
  "main": "index.js",
  "author": "Leonardo Ferreira Lima",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build:docker:dev": "docker build -t leoferreiralima/resolvit -f ./docker/dev/Dockerfile .",
    "build": "tsc",
    "prepare": "husky install",
    "start": "node dist/server.js",
    "dev": "NODE_ENV=development ts-node-dev -r ./module-alias.js --inspect --respawn --transpile-only src/server.ts",
    "dev:docker": "docker-compose up",
    "test": "jest",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint *.ts --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node-dev": "^1.1.6",
    "tsc": "^2.0.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "apollo-server": "^2.25.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  }
}
