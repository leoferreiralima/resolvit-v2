{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "dist"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./dist/*"
      ],
      "@/tests/*": [
        "./__tests__/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__tests__"
  ]
}